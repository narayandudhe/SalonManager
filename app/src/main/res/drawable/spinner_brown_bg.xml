<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
                    <padding android:right="5dp" android:bottom="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:src="@drawable/drpdown" />
            </item>
        </layer-list>
    </item>
</selector>
